generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Credential {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  role     UserRoles @default(CUSTOMER)

  isActive Boolean @default(true)

  isBlocked    Boolean   @default(false)
  blockedAt    DateTime?
  blockReason  String?
  blockedUntil DateTime?

  isDeleted        Boolean       @default(false)
  deletedAt        DateTime?
  deletionReason   String?
  canReactivate    Boolean       @default(true)
  deletionType     DeletionType?
  reactivateWithin DateTime?

  lastLogin           DateTime?
  failedLoginAttempts Int       @default(0)
  lockedUntil         DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  refreshTokens  RefreshToken[]
  passwordResets PasswordReset[]

  @@index([email])
  @@index([role])
  @@index([deletedAt])
  @@index([reactivateWithin])
  @@map("credentials")
}

model RefreshToken {
  id           String   @id @default(uuid())
  token        String   @unique
  credentialId String
  expiresAt    DateTime
  isRevoked    Boolean  @default(false)
  createdAt    DateTime @default(now())

  credential Credential @relation(fields: [credentialId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([credentialId])
  @@map("refresh_tokens")
}

model PasswordReset {
  id           String    @id @default(uuid())
  credentialId String
  resetToken   String    @unique
  expiresAt    DateTime
  usedAt       DateTime?
  createdAt    DateTime  @default(now())

  credential Credential @relation(fields: [credentialId], references: [id], onDelete: Cascade)

  @@index([resetToken])
  @@map("password_resets")
}

enum DeletionType {
  SOFT
  PERMANENT
}

enum UserRoles {
  SUPER_ADMIN
  ADMIN
  MODERATOR
  VENDOR
  CUSTOMER
}
